      <% if (orders.length === 0) { %>
        <tr><td colspan="6">No Orders Found</td></tr>
      <% } else { %>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.orderNumber %></td>
            <td><%= order.orderName %></td>
            <td><%= order.products.join(", ") %></td>
            <td><%= order.status %></td>
            <td><%= order.referenceId %></td>

            <td>
              <form action="/delete-order" method="POST" style="display:inline;">
                <input type="hidden" name="referenceId" value="<%= order.referenceId %>" />
                <button type="submit" title="Delete" onclick="return confirm('Are you sure you want to delete this order?')">
                  üóëÔ∏è
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody> 
  </table>

  <div style="text-align:center; margin-top:20px;">
    <form action="/submit-statuses" method="POST">
      <button class="submit-btn" type="submit">Submit Status</button>
    </form>
  </div>
</body>
</html>
