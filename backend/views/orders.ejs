<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manufacturer Orders</title>
  <style>
    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background-color: #f6f8fa;
      margin: 30px;
      color: #111827;
    }

    h1 {
      text-align: center;
      color: #06122d;
      font-weight: 600;
      margin-bottom: 25px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background: #ffffff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 6px rgba(0,0,0,0.08);
    }

    td {
      border-bottom: 1px solid #e5e7eb;
      padding: 10px 12px;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #06122d;
      color: white;
      font-weight: 500;
      padding: 12px 10px;
      border: none;
      text-align: center;
    }

    tr:hover {
      background-color: #f1f5ff;
    }

    .status-select {
  border: 1px solid #d1d5db;
  border-radius: 5px;
  padding: 5px 8px;
  background-color: #f9fafb;
  font-size: 14px;
  color: #111827;
  cursor: pointer;
}

.status-select:hover {
  background-color: #eef2ff;
}

    button {
      cursor: pointer;
      border: none;
      background: none;
    }

    button[title="Delete"] {
      font-size: 18px;
      color: red;
      transition: 0.2s;
    }

    button[title="Delete"]:hover {
      transform: scale(1.3);
    }

    .submit-btn {
      background-color: #a6a8a7;
      color: white;
      border-radius: 6px;
      padding: 6px 12px;
      border: none;
      cursor: pointer;
    }

    .submit-btn:hover {
      background-color: #6c6c6c;
    }
  </style>
</head>
<body>
  <h1>Manufacturer Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Manufacturer Order No.</th>
        <th>Salesforce Order No.</th>
        <th>DealerName</th>
        <th>Vehicle</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
  <% if (orders.length === 0) { %>
    <tr><td colspan="6" class="no-orders">No Orders Found</td></tr>
  <% } else { %>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order.manufacturerOrderNo %></td>

        <td><%= order.salesOrderNo %></td>
        <td><%= order.dealerName %></td>
        <td><%= order.vehicle.join(", ") %></td>

        <!-- STATUS DROPDOWN -->
        <td>
          <form action="/update-status" method="POST" style="display:inline;">
            <input type="hidden" name="referenceId" value="<%= order.referenceId %>" />
            <select name="status" class="status-select">
              <option value="Acknowledged" <%= order.status === "Acknowledged" ? "selected" : "" %>>Acknowledged</option>
              <option value="Allocated" <%= order.status === "Allocated" ? "selected" : "" %>>Allocated</option>
              <option value="In Production" <%= order.status === "In Production" ? "selected" : "" %>>In Production</option>
              <option value="In Paint" <%= order.status === "In Paint" ? "selected" : "" %>>In Paint</option>
              <option value="In Voiced" <%= order.status === "In Voiced" ? "selected" : "" %>>In Voiced</option>
              <option value="In Transit" <%= order.status === "In Transit" ? "selected" : "" %>>In Transit</option>
            </select>
          </form>
        </td>


       
      </tr>
    <% }) %>
  <% } %>
</tbody>

    
  </table>

  <div style="text-align:center; margin-top:20px;">
    <form action="/submit-statuses" method="POST">
      <button class="submit-btn" type="submit">Submit Status</button>
    </form>
  </div>
</body>
</html>
