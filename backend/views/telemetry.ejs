<!DOCTYPE html>
<html>
<head>
  <title>Telemetry Data</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6fb;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    nav {
      background: #06122d;
      padding: 12px;
      display: flex;
      justify-content: center;
      gap: 30px;
    }

    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
    }

    .container {
      max-width: 1200px;
      margin: 25px auto;
      padding: 10px 20px;
    }

    h2 {
      color: #06122d;
      margin-bottom: 18px;
      font-size: 22px;
    }

    /* üî• GRID FLASHCARDS */
    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 18px;
    }

    .card {
      background: white;
      border-radius: 14px;
      padding: 18px;
      box-shadow: 0px 4px 12px rgba(0,0,0,0.08);
      border: 1px solid #e7e9f1;
      transition: 0.2s ease-in-out;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0px 8px 18px rgba(0,0,0,0.10);
    }

    .title {
      font-size: 16px;
      font-weight: 700;
      color: #06122d;
      margin-bottom: 6px;
    }

    .vin {
      font-size: 13px;
      color: #555;
      margin-bottom: 14px;
    }

    .data-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .label {
      color: #666;
      font-weight: 600;
    }

    .value {
      color: #111;
      font-weight: 600;
    }

    .footer {
      margin-top: 15px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .btn {
      background: #06122d;
      color: white;
      padding: 10px 12px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 700;
      width: 100%;
      font-size: 14px;
    }

    .btn:hover {
      background: #0a1d4b;
    }

    .status {
      font-size: 13px;
      font-weight: 700;
      display: none;
      text-align: center;
      padding: 8px;
      border-radius: 10px;
    }

    .success {
      background: #e6fff0;
      color: #0a7a2f;
      border: 1px solid #b7f0cc;
    }

    .fail {
      background: #ffecec;
      color: #b30000;
      border: 1px solid #ffbaba;
    }

    /* Responsive */
    @media(max-width: 980px) {
      .grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media(max-width: 600px) {
      .grid {
        grid-template-columns: repeat(1, 1fr);
      }
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  

  <div class="container">
    <h2>Vehicle Telemetry Dashboard</h2>

    <div class="grid">
      <% telemetryData.forEach((t, index) => { %>
        <div class="card">

          <div class="title"><%= t.vehicle %></div>
          <div class="vin">VIN: <%= t.vin %></div>

          <div class="data-row">
            <div class="label">Speed</div>
            <div class="value"><%= t.speed %> km/h</div>
          </div>

          <div class="data-row">
            <div class="label">Fuel</div>
            <div class="value"><%= t.fuel %>%</div>
          </div>

          <div class="data-row">
            <div class="label">Battery</div>
            <div class="value"><%= t.battery %>%</div>
          </div>

          <div class="data-row">
            <div class="label">Engine Temp</div>
            <div class="value"><%= t.engineTemp %> ¬∞C</div>
          </div>

          <div class="data-row">
            <div class="label">Tyre Pressure</div>
            <div class="value"><%= t.tyrePressure %></div>
          </div>

          <div class="data-row">
            <div class="label">Odometer</div>
            <div class="value"><%= t.odometer %> km</div>
          </div>

          <div class="data-row">
            <div class="label">Location</div>
            <div class="value"><%= t.location %></div>
          </div>

          <div class="data-row">
            <div class="label">Updated</div>
            <div class="value"><%= t.lastUpdated %></div>
          </div>

          <div class="footer">
            <button class="btn" onclick="sendTelemetry(<%= index %>)">
              Send to CRM
            </button>

            <div class="status success" id="success-<%= index %>">
              ‚úÖ Sent to Salesforce
            </div>

            <div class="status fail" id="fail-<%= index %>">
              ‚ùå Failed to send
            </div>
          </div>

        </div>
      <% }) %>
    </div>
  </div>

  <script>
    const telemetryData = <%- JSON.stringify(telemetryData) %>;

    async function sendTelemetry(index) {
      const payload = telemetryData[index];

      // Hide previous statuses
      document.getElementById("success-" + index).style.display = "none";
      document.getElementById("fail-" + index).style.display = "none";

      try {
        const res = await fetch("/send-telemetry-to-crm", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (res.ok) {
          document.getElementById("success-" + index).style.display = "block";
        } else {
          document.getElementById("fail-" + index).style.display = "block";
          console.log("Salesforce Error:", data);
        }
      } catch (err) {
        document.getElementById("fail-" + index).style.display = "block";
        console.log("Error:", err.message);
      }
    }
  </script>

</body>
</html>
