<!DOCTYPE html>
<html>
<head>
  <title>Telematics Data</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6fb;
      margin: 0;
      padding: 0;
    }

    nav {
      background: #06122d;
      padding: 12px;
      display: flex;
      justify-content: center;
      gap: 30px;
    }

    nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
    }

    .container {
      max-width: 900px;
      margin: 25px auto;
      padding: 10px 20px;
    }

    h2 {
      color: #06122d;
      margin-bottom: 18px;
      font-size: 22px;
    }

    .card {
      background: white;
      border-radius: 14px;
      padding: 18px;
      box-shadow: 0px 4px 12px rgba(0,0,0,0.08);
      border: 1px solid #e7e9f1;
    }

    .subtle {
      color: #666;
      font-size: 13px;
      margin-top: 4px;
    }

    .row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 14px;
      margin-top: 14px;
    }

    .field label {
      display: block;
      font-size: 13px;
      color: #666;
      font-weight: 700;
      margin-bottom: 6px;
    }

    input, select, textarea {
      width: 100%;
      padding: 10px 12px;
      border-radius: 10px;
      border: 1px solid #d7dbea;
      font-size: 14px;
      outline: none;
    }

    textarea {
      min-height: 90px;
      resize: vertical;
    }

    .rowFull {
      margin-top: 14px;
    }

    .btn {
      background: #06122d;
      color: white;
      padding: 10px 12px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 800;
      width: 100%;
      font-size: 14px;
      margin-top: 16px;
    }

    .btn:hover {
      background: #0a1d4b;
    }

    .status {
      font-size: 13px;
      font-weight: 800;
      display: none;
      text-align: center;
      padding: 10px;
      border-radius: 10px;
      margin-top: 12px;
    }

    .success {
      background: #e6fff0;
      color: #0a7a2f;
      border: 1px solid #b7f0cc;
    }

    .fail {
      background: #ffecec;
      color: #b30000;
      border: 1px solid #ffbaba;
    }

    .smallNote {
      font-size: 12px;
      color: #777;
      margin-top: 8px;
    }

    @media(max-width: 720px) {
      .row { grid-template-columns: 1fr; }
    }
  </style>
</head>

<body>
  <nav>
    <a href="/">Home</a>
    <a href="/orders">Orders</a>
    <a href="/telemetry">Telematics</a>
    <a href="/dashboard">Dashboard</a>
  </nav>

  <div class="container">
    <h2>Telematics Data (Single Vehicle)</h2>

    <div class="card">
      <div style="font-weight:800;color:#06122d;font-size:16px;">
        Vehicle__c: <span id="vehicleText"><%= model.vehicleSerialNumber %></span>
      </div>
      <div class="subtle">
        (This comes from Asset.SerialNumber. If Salesforce hasn’t sent an asset yet, a default value is shown.)
      </div>

      <div class="row">
        <div class="field">
          <label>Vehicle__c (Asset SerialNumber)</label>
          <input id="vehicleSerialNumber" value="<%= model.vehicleSerialNumber %>" />
        </div>

        <div class="field">
          <label>Event_Timestamp__c</label>
          <input id="eventTimestamp" type="datetime-local" value="<%= model.eventTimestamp %>" />
        </div>
      </div>

      <div class="row">
        <div class="field">
          <label>Event_Type__c</label>
          <select id="eventType">
            <option value="RPMSpike" <%= model.eventType === 'RPMSpike' ? 'selected' : '' %>>RPMSpike</option>
            <option value="EngineTempHigh" <%= model.eventType === 'EngineTempHigh' ? 'selected' : '' %>>EngineTempHigh</option>
            <option value="Predictive Maintenance" <%= model.eventType === 'Predictive Maintenance' ? 'selected' : '' %>>Predictive Maintenance</option>
          </select>
          <div class="smallNote">
            Threshold examples in Salesforce REST service:
            EngineTempHigh &gt; 30, RPMSpike &gt; 6000.
          </div>
        </div>

        <div class="field">
          <label>Sensor_Value__c (starts at 0)</label>
          <div class="row" style="grid-template-columns: 1fr 1fr; margin-top:0;">
            <div class="field">
              <input id="sensorValueNumber" type="number" value="<%= model.sensorValueNumber %>" />
            </div>
            <div class="field">
              <input id="sensorUnit" value="<%= model.sensorUnit %>" />
            </div>
          </div>
          <div class="smallNote">
            Salesforce stores it like: "35 °C" or "6200 RPM" or "0 RPM".
          </div>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <label>Severity__c</label>
          <select id="severity">
            <option value="Low" <%= model.severity === 'Low' ? 'selected' : '' %>>Low</option>
            <option value="Medium" <%= model.severity === 'Medium' ? 'selected' : '' %>>Medium</option>
            <option value="High" <%= model.severity === 'High' ? 'selected' : '' %>>High</option>
            <option value="Critical" <%= model.severity === 'Critical' ? 'selected' : '' %>>Critical</option>
          </select>
        </div>

        <div class="field">
          <label>Status__c</label>
          <select id="status">
            <option value="New" <%= model.status === 'New' ? 'selected' : '' %>>New</option>
            <option value="In Progress" <%= model.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
            <option value="Resolved" <%= model.status === 'Resolved' ? 'selected' : '' %>>Resolved</option>
          </select>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <label>Component__c</label>
          <input id="component" value="<%= model.component %>" />
        </div>

        <div class="field">
          <label>Recommended_Action__c</label>
          <input id="recommendedActionShort" value="<%= model.recommendedAction %>" />
        </div>
      </div>

      <div class="rowFull">
        <div class="field">
          <label>Recommended_Action__c (Long)</label>
          <textarea id="recommendedAction"><%= model.recommendedAction %></textarea>
        </div>
      </div>

      <button class="btn" onclick="sendTelemetry()">Submit (Create Telematic Event + Case if threshold exceeded)</button>

      <div class="status success" id="successBox">
        ✅ Sent to Salesforce (Telematic Event created)
      </div>

      <div class="status fail" id="failBox">
        ❌ Failed to send
      </div>

      <div class="smallNote" id="resultText"></div>
    </div>
  </div>

  <script>
    async function sendTelemetry() {
      document.getElementById("successBox").style.display = "none";
      document.getElementById("failBox").style.display = "none";
      document.getElementById("resultText").innerText = "";

      const payload = {
        vehicleSerialNumber: document.getElementById("vehicleSerialNumber").value.trim(),
        eventTimestamp: document.getElementById("eventTimestamp").value,
        eventType: document.getElementById("eventType").value,
        sensorValueNumber: Number(document.getElementById("sensorValueNumber").value || 0),
        sensorUnit: document.getElementById("sensorUnit").value.trim(),
        severity: document.getElementById("severity").value,
        component: document.getElementById("component").value.trim(),
        recommendedAction: document.getElementById("recommendedAction").value.trim(),
        status: document.getElementById("status").value
      };

      try {
        const res = await fetch("/send-telemetry-to-crm", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (res.ok && data.success) {
          document.getElementById("successBox").style.display = "block";
          let msg = data.message || "Success";
          if (data.telematicEventId) msg += " | Telematic Event: " + data.telematicEventId;
          if (data.caseId) msg += " | Case: " + data.caseId;
          document.getElementById("resultText").innerText = msg;
        } else {
          document.getElementById("failBox").style.display = "block";
          document.getElementById("resultText").innerText = (data && (data.message || JSON.stringify(data))) || "Error";
          console.log("Salesforce Error:", data);
        }
      } catch (err) {
        document.getElementById("failBox").style.display = "block";
        document.getElementById("resultText").innerText = err.message;
        console.log("Error:", err.message);
      }
    }
  </script>
</body>
</html>
